<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="computing.mobile.lanterninthedark" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="computing.mobile.lanterninthedark.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="computing.mobile.lanterninthedark.HostActivity"
            android:label="@string/title_activity_host" >
        </activity>
        <activity
            android:name="computing.mobile.lanterninthedark.ClientActivity"
            android:label="@string/title_activity_client" >
        </activity>
        <activity
            android:name="computing.mobile.lanterninthedark.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
    </application>

</manifest>
